<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.alexbykov.permissionssample.fragments.ChooseFragment">

    <Button
        android:id="@+id/btn_fragment_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/btn_fragment_sample" />

    <Button
        android:id="@+id/btn_activity_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_fragment_sample"
        android:layout_centerInParent="true"
        android:text="@string/btn_activity_sample" />

</RelativeLayout>
